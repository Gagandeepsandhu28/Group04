@model Week3_FormCreation.Models.AdminLogin
@{
    ViewData["Title"] = "Administration Login";
    Layout = "~/Views/Shared/_LayoutAdminLogin.cshtml";
}

<div class="panel panel-primary">
    <h1>Login</h1>
    <div class="panel-body">

        @if (Model != null)
        {
            
            <div class="alert alert-dark" role="alert">
                <b>@Model.adminMsg</b>
            </div>


        }
        <fieldset>
            @using (Html.BeginForm())
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.adminLoginId, "Login Id:", new { @id = "adminLoginId" })
                        @Html.TextBoxFor(model => model.adminLoginId, new { @class = "form-control", @placeholder = "Login Id" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.adminLoginPwd, "Password", new { @id = "adminLoginPwd" })
                        @Html.PasswordFor(model => model.adminLoginPwd, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Login</button>
            }
        </fieldset>
    </div>
</div>

